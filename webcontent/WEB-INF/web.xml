<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    
    <display-name>Intranet Escolar</display-name>
    
    &lt;!-- Configuración de la página de inicio -->
    <welcome-file-list>
        <welcome-file>login.jsp</welcome-file>
    </welcome-file-list>
    
    &lt;!-- Configuración de sesión -->
    <session-config>
        <session-timeout>30</session-timeout>
    </session-config>
    
    &lt;!-- Filtro de Autenticación -->
    <filter>
        <filter-name>AuthenticationFilter</filter-name>
        <filter-class>com.intranet.filter.AuthenticationFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthenticationFilter</filter-name>
        <url-pattern>/dashboard</url-pattern>
        <url-pattern>/curso</url-pattern>
        <url-pattern>/mis-cursos</url-pattern>
        <url-pattern>/curso-estudiante</url-pattern>
        <url-pattern>/mis-hijos</url-pattern>
        <url-pattern>/usuarios</url-pattern>
        <url-pattern>/reportes</url-pattern>
        <url-pattern>/comunicados</url-pattern>
        <url-pattern>/tareas</url-pattern>
        <url-pattern>/horarios</url-pattern>
        <url-pattern>/asistencia</url-pattern>
        <url-pattern>/calificaciones</url-pattern>
        <url-pattern>/configuracion</url-pattern>
    </filter-mapping>
    
    &lt;!-- Filtro de Autorización -->
    <filter>
        <filter-name>RoleFilter</filter-name>
        <filter-class>com.intranet.filter.RoleFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>RoleFilter</filter-name>
        <url-pattern>/usuarios</url-pattern>
        <url-pattern>/reportes</url-pattern>
        <url-pattern>/configuracion</url-pattern>
    </filter-mapping>
    
    &lt;!-- Servlets -->
    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>com.intranet.controller.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>com.intranet.controller.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>DashboardServlet</servlet-name>
        <servlet-class>com.intranet.controller.DashboardServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DashboardServlet</servlet-name>
        <url-pattern>/dashboard</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CursoDetalleServlet</servlet-name>
        <servlet-class>com.intranet.controller.CursoDetalleServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CursoDetalleServlet</servlet-name>
        <url-pattern>/curso</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MisCursosServlet</servlet-name>
        <servlet-class>com.intranet.controller.MisCursosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MisCursosServlet</servlet-name>
        <url-pattern>/mis-cursos</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>CursoEstudianteServlet</servlet-name>
        <servlet-class>com.intranet.controller.CursoEstudianteServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CursoEstudianteServlet</servlet-name>
        <url-pattern>/curso-estudiante</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>MisHijosServlet</servlet-name>
        <servlet-class>com.intranet.controller.MisHijosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>MisHijosServlet</servlet-name>
        <url-pattern>/mis-hijos</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>UsuariosServlet</servlet-name>
        <servlet-class>com.intranet.controller.UsuariosServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UsuariosServlet</servlet-name>
        <url-pattern>/usuarios</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>FileUploadServlet</servlet-name>
        <servlet-class>com.intranet.controller.FileUploadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileUploadServlet</servlet-name>
        <url-pattern>/upload</url-pattern>
    </servlet-mapping>
    
    <servlet>
        <servlet-name>FileDownloadServlet</servlet-name>
        <servlet-class>com.intranet.controller.FileDownloadServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FileDownloadServlet</servlet-name>
        <url-pattern>/descargar</url-pattern>
    </servlet-mapping>
    
    &lt;!-- Configuración de errores -->
    <error-page>
        <error-code>404</error-code>
        <location>/error/404.jsp</location>
    </error-page>
    <error-page>
        <error-code>500</error-code>
        <location>/error/500.jsp</location>
    </error-page>
    <error-page>
        <exception-type>java.lang.Exception</exception-type>
        <location>/error/error.jsp</location>
    </error-page>
</web-app>